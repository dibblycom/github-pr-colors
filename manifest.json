{
  "manifest_version": 3,
  "name": "PR Colors",
  "author": {
    "email": "mattreid@dibbly.com"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "description": "Changes the colors of GitHub PR review statuses to quickly assess them at a glance.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["script.js"]
    }
  ],
  "host_permissions": ["https://github.com/*"]
}
